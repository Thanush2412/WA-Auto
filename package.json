{
  "name": "whatsapp_automation_electron",
  "version": "1.0.0",
  "description": "WhatsApp Automation app for sending messages with background scanning",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --config.asar=true --config.asarUnpack=node_modules/active-win",
    "build-exe": "electron-builder --config.asar=true --config.asarUnpack=node_modules/active-win --win portable --config.directories.output=dist2",
    "pack": "electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "electron",
    "background"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "adm-zip": "^0.5.16",
    "clipboard-event": "^1.6.0",
    "clipboard-js": "^0.3.6",
    "clipboardy": "^4.0.0",
    "csv-parser": "^3.0.0",
    "electron-clipboard-extended": "^1.1.1",
    "electron-clipboard-watcher": "^1.0.1",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "mongodb": "^6.16.0",
    "node-key-sender": "^1.0.11",
    "node-notifier": "^10.0.1",
    "screenshot-desktop": "^1.15.1",
    "tesseract.js": "^6.0.1",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.whatsapp.automation",
    "productName": "WhatsApp Automation",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/app_icon.png"
    },
    "portable": {
      "artifactName": "WhatsApp-Automation-Portable.exe"
    },
    "extraResources": [
      {
        "from": "app_data.json",
        "to": "app_data.json"
      },
      {
        "from": "scripts/paste.vbs",
        "to": "scripts/paste.vbs"
      },
      {
        "from": "scripts/send.vbs",
        "to": "scripts/send.vbs"
      },
      {
        "from": "scripts/python/",
        "to": "scripts/python/"
      }
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  }
}
