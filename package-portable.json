{
  "name": "whatsapp_automation_portable",
  "version": "1.0.0",
  "description": "WhatsApp Automation Portable - Standalone Windows Application",
  "main": "src/main/main-portable.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "start-portable": "set PORTABLE_MODE=1 && electron .",
    "build": "electron-builder --config.asar=false",
    "build-portable": "electron-builder --config.asar=false --win portable --config.directories.output=dist-portable",
    "build-all": "electron-builder --config.asar=false --win --config.directories.output=dist-complete",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "electron",
    "portable",
    "standalone"
  ],
  "author": "WhatsApp Automation Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "adm-zip": "^0.5.16",
    "clipboard-event": "^1.6.0",
    "clipboard-js": "^0.3.6",
    "clipboardy": "^4.0.0",
    "csv-parser": "^3.0.0",
    "electron-clipboard-extended": "^1.1.1",
    "electron-clipboard-watcher": "^1.0.1",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "mongodb": "^6.16.0",
    "node-key-sender": "^1.0.11",
    "node-notifier": "^10.0.1",
    "screenshot-desktop": "^1.15.1",
    "tesseract.js": "^6.0.1",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.whatsapp.automation.portable",
    "productName": "WhatsApp Automation Portable",
    "compression": "store",
    "removePackageScripts": true,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/app_icon.png",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}-${env.BUILD_TYPE}.${ext}"
    },
    "portable": {
      "artifactName": "WhatsApp-Automation-Portable.exe",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "directories": {
      "buildResources": "build",
      "output": "dist-portable"
    },
    "extraResources": [
      {
        "from": "portable/",
        "to": "portable/",
        "filter": ["**/*"]
      },
      {
        "from": "scripts/",
        "to": "scripts/",
        "filter": ["**/*"]
      },
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      },
      {
        "from": "database/",
        "to": "database/",
        "filter": ["**/*"]
      },
      {
        "from": "src/main/app_data.json",
        "to": "app_data.json"
      }
    ],
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "!portable/**/*",
      "!scripts/**/*",
      "!assets/**/*",
      "!database/**/*",
      "!dist*/**/*",
      "!build/**/*",
      "!docs/**/*",
      "!tests/**/*",
      "!*.md",
      "!*.bat",
      "!*.py",
      "!*.png",
      "!*.txt",
      "!downloads/**/*",
      "!temp/**/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "asarUnpack": [
      "node_modules/active-win/**/*",
      "node_modules/screenshot-desktop/**/*"
    ]
  }
}
